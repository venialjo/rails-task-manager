<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6">
      <div class="m-5 text-center">
        <%= simple_form_for(@task) do |t| %>
        <%= t.input :title %>
        <%= t.input :details %>
        <%= t.submit class: "btn btn-primary m-3" %>
      <% end %>
      <%= link_to "Cancel", tasks_path, class: "btn btn-dark" %>
      </div>
    </div>
  </div>
</div>
